    <children>
        <AnchorPane fx:id="anchorPane2" prefHeight="200.0" prefWidth="200.0">
            <children>
                <TextField fx:id="nameMovie" layoutX="19.0" layoutY="88.0" prefHeight="25.0" prefWidth="487.0"
                           promptText="Name of a movie"/>
