<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox id="myPane" stylesheets="@../css/myStyle.css" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="Kraisie.SceneController.SelectController">
    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
        </padding>
        <RadioButton fx:id="radio1" mnemonicParsing="false">
            <toggleGroup>
                <ToggleGroup fx:id="series"/>
            </toggleGroup>
            <graphic>
                <VBox>
                    <ImageView fx:id="image1" fitHeight="140.0" fitWidth="758.0" pickOnBounds="true"
                               preserveRatio="true">
                        <VBox.margin>
                            <Insets left="10.0"/>
                        </VBox.margin>
                    </ImageView>
                </VBox>
            </graphic>
        </RadioButton>
        <RadioButton fx:id="radio2" mnemonicParsing="false" toggleGroup="$series" GridPane.rowIndex="1">
            <graphic>
                <VBox>
                    <ImageView fx:id="image2" fitHeight="140.0" fitWidth="758.0" pickOnBounds="true"
                               preserveRatio="true">
                        <VBox.margin>
                            <Insets left="10.0"/>
                        </VBox.margin>
                    </ImageView>
                </VBox>
            </graphic>
        </RadioButton>
        <RadioButton fx:id="radio3" mnemonicParsing="false" toggleGroup="$series" GridPane.rowIndex="2">
            <graphic>
                <VBox>
                    <ImageView fx:id="image3" fitHeight="140.0" fitWidth="758.0" pickOnBounds="true"
                               preserveRatio="true">
                        <VBox.margin>
                            <Insets left="10.0"/>
                        </VBox.margin>
                    </ImageView>
                </VBox>
            </graphic>
        </RadioButton>
        <RadioButton fx:id="radio4" mnemonicParsing="false" toggleGroup="$series" GridPane.rowIndex="3">
            <graphic>
                <VBox>
                    <ImageView fx:id="image4" fitHeight="140.0" fitWidth="758.0" pickOnBounds="true"
                               preserveRatio="true">
                        <VBox.margin>
                            <Insets left="10.0"/>
                        </VBox.margin>
                    </ImageView>
                </VBox>
            </graphic>
        </RadioButton>
        <RadioButton fx:id="radio5" mnemonicParsing="false" toggleGroup="$series" GridPane.rowIndex="4">
            <graphic>
                <VBox>
                    <ImageView fx:id="image5" fitHeight="140.0" fitWidth="758.0" pickOnBounds="true"
                               preserveRatio="true">
                        <VBox.margin>
                            <Insets left="10.0"/>
                        </VBox.margin>
                    </ImageView>
                </VBox>
            </graphic>
        </RadioButton>
        <VBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.valignment="CENTER">
            <Label id="normalLabel" fx:id="labelName1"/>
            <Label id="normalLabel" fx:id="labelYear1"/>
            <Label id="normalLabel" fx:id="labelID1"/>
            <Label id="normalLabel" fx:id="labelNetwork1"/>
            <Label id="normalLabel" fx:id="labelStatus1"/>
        </VBox>
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <Label id="normalLabel" fx:id="labelName2"/>
            <Label id="normalLabel" fx:id="labelYear2"/>
            <Label id="normalLabel" fx:id="labelID2"/>
            <Label id="normalLabel" fx:id="labelNetwork2"/>
            <Label id="normalLabel" fx:id="labelStatus2"/>
        </VBox>
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <Label id="normalLabel" fx:id="labelName3"/>
            <Label id="normalLabel" fx:id="labelYear3"/>
            <Label id="normalLabel" fx:id="labelID3"/>
            <Label id="normalLabel" fx:id="labelNetwork3"/>
            <Label id="normalLabel" fx:id="labelStatus3"/>
        </VBox>
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <Label id="normalLabel" fx:id="labelName4"/>
            <Label id="normalLabel" fx:id="labelYear4"/>
            <Label id="normalLabel" fx:id="labelID4"/>
            <Label id="normalLabel" fx:id="labelNetwork4"/>
            <Label id="normalLabel" fx:id="labelStatus4"/>
        </VBox>
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <Label id="normalLabel" fx:id="labelName5"/>
            <Label id="normalLabel" fx:id="labelYear5"/>
            <Label id="normalLabel" fx:id="labelID5"/>
            <Label id="normalLabel" fx:id="labelStatus5"/>
            <Label id="normalLabel" fx:id="labelNetwork5"/>
        </VBox>
    </GridPane>
    <HBox alignment="CENTER" spacing="25.0">
        <Button mnemonicParsing="false" onAction="#select" text="Select series"/>
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToMain" text="Back to Main Menu"/>
        <VBox.margin>
            <Insets bottom="15.0"/>
        </VBox.margin>
        <padding>
            <Insets top="15.0"/>
        </padding>
    </HBox>
</VBox>
