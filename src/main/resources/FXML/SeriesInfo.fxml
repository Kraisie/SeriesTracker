                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Episode: "/>
                                <Label id="normalLabel" fx:id="seriesEpisodes" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Completion: "/>
                                <Label id="normalLabel" fx:id="seriesCompletion" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region VBox.vgrow="ALWAYS"/>
                     </children>
                  </VBox>
                        <Region minWidth="25.0"/>
               </children>
               <VBox.margin>
                   <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
