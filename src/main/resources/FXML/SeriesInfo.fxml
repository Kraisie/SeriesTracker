                            <HBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </HBox.margin>
                        </Rectangle>
                        <Region minWidth="25.0"/>
                        <VBox>
                            <children>
                                <Region minHeight="25.0"/>
                                <HBox>
                                    <children>
                                        <Label id="normalTitle" minWidth="-Infinity" text="Name: "/>
                                        <Label id="normalLabel" fx:id="seriesName" wrapText="true"/>
                                    </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Overview: "/>
                                <Label id="normalLabel" fx:id="seriesOverview" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Network: "/>
                                <Label id="normalLabel" fx:id="seriesNetwork" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Status: "/>
                                <Label id="normalLabel" fx:id="seriesStatus" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Episode length: "/>
                                <Label id="normalLabel" fx:id="seriesEpisodeLength" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
                        <HBox>
                            <children>
                                <Label id="normalTitle" minWidth="-Infinity" text="Rating: "/>
                                <Label id="normalLabel" fx:id="seriesRating" wrapText="true"/>
                            </children>
                        </HBox>
                                <Region minHeight="25.0"/>
