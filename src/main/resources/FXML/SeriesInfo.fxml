    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <HBox id="myBackground" alignment="CENTER">
                    <children>
                        <Region minWidth="25.0"/>
                        <Rectangle fx:id="seriesImage" arcHeight="5.0" arcWidth="5.0" height="570.0" stroke="BLACK"
